# Valhalla Docker Environment Configuration

# Server Configuration
VALHALLA_PORT=8002
VALHALLA_HOST=0.0.0.0

# OSM Data Source
# Florida data (recommended for TechHub demo)
OSM_DATA_URL=https://download.geofabrik.de/north-america/us/florida-latest.osm.pbf

# Alternative regions:
# OSM_DATA_URL=https://download.geofabrik.de/north-america/us/southeast-latest.osm.pbf
# OSM_DATA_URL=https://download.geofabrik.de/north-america-latest.osm.pbf

# Tile Building Options
BUILD_TILES=true
VERBOSE_LOGGING=true

# Resource Limits
MEMORY_LIMIT=4g
CPU_LIMIT=2

# Timezone
TZ=America/New_York